<br />

<div class="container booyah-box2 col-xs-12 col-sm-12-offset-1">
  <div class="row">
    <div class="col-12 col-xs-offset-1">
      <h1>Safety Compliance Courses</h1>
      <hr />
    </div>
  </div>
      
        <% @courses.each do |course| %>
        <div class="row course-box">
          <div class="col-xs-12 col-sm-12">
            <h2 class="special"><%= link_to course.title, course_path(course) %></h2>
          </div>
          <br />
          <br />
          <div class="col-xs-12 col-sm-6">
            <br />
            <%= image_tag course.image.to_s, class: 'img-fluid' %>
          </div>  
            <br />
          <div class="col-xs-12 col-sm-6">
            <br />
            <%= course.description %>
          <br />
            <%= link_to 'More Details', course_path(course), class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
        <br class="clr">  
      <% end %>
    </div>
  </div>
</div>