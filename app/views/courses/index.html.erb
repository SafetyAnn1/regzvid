<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Safety Compliance Courses</h1>
  <hr />

  <% @courses.each do |course| %>
    <h2 class="text-center course-catalog"><%= link_to course.title, course_path(course) %></h2>
    <br />
    <%= image_tag (course.image.url), class: 'img-fluid' unless course.image.url.nil? %>
    <br />
    <br />
    <div class="row">
       <div class="col-sm-8 col-12">
        <h2 class="text-center">Course Description</h2>
          <%= course.description %>
       </div>
      <div class="col-sm-4 col-12 text-center">
        <%= link_to 'More Details', course_path(course), class: 'btn btn-success btn-large' %>
      </div>
    </div>
    <hr />
    <br class='clr'>
  <% end %>
</div>