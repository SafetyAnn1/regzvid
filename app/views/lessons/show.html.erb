<br />

<div class="container booyah-box2 col-10 offset-1">
  <div class="row">
    <div class="col-12 col-xs-12">
      <h1><%= current_lesson.title %></h1>
      <h3><%= current_lesson.subtitle %></h3>
      <hr />
    </div>
  </div>
  
  <div class="row course-box2">
    <div class="col-12 col-xs-12">
      <% if current_lesson.next_lesson.present? %>
        <%= link_to lesson_path(current_lesson.next_lesson), class: 'btn btn-warning float-right' do %>
          Next Lesson &nbsp;
          <span class="fa fa-forward"></span>
        <% end %>
      <% end %>
    </div>
     <br class="clr" />
     <br />
     <br />
     <div class="col-12 col-xs-12 center">
       <video id="my-video" class="video-js vjs-big-play-centered vjs-fluid" controls preload="auto"
      poster="<%= image_path('vidtile.jpg') %>" data-setup="{}">
        <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
          <noscript>
            <p class="vjs-no-js">
              To view this video please enable JavaScript, and consider upgrading to a web browser that
              <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
            </p>
          </noscript>
        </video>
     </div>
  </div>
</div>